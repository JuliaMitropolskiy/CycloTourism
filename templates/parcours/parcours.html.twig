{% extends 'base.html.twig' %}

{% block title %} {{ parent() }}: Parcours {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des parcours</h1>
    <div>
        <a href="{{ path('app_create_parcours') }}"><button type="button" class="btn btn-outline-primary">Add parcours</button></a>
    </div>

    <br>
    {% for parcours in parcoursList %}
        <div> {{ parcours.name }} -- {{ parcours.duration }} -- {{ parcours.region.name }}</div>
    {% endfor %}
    <br>

</div>
{% endblock %}
