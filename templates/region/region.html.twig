{% extends 'base.html.twig' %}

{% block title %}Régions à Découvrir{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Régions à découvrir</h1>

    {% for region in regions %}
        <div> {{ region.name }} </div>
        <a href="{{ path('parcours_region', {'id': region.id}) }}">See parcours</a>
    {% endfor %}
    <br>
    <div>
        <a href="{{ path('add_region') }}">Ajouter une région</a>
    </div>

</div>
{% endblock %}